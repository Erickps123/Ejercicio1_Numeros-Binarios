    <div style="margin: 2%;">
    <h4>Los numeros convertidos a binario son:</h4>
    <table style="border:inset" class="table table-dark">
        <tr style="border:black 3px;">
            @for (int i = 0; i <= 9; i++)
            {
                <td style="border:black 2px solid;">@ViewData["numIngresado" + i]</td>

            }
        </tr>
        <tr style="border:black 3px;">
            @for (int i = 0; i <= 9; i++)
            {
                <td style="border:black 2px solid;">@ViewData["num" + i]</td>

            }
        </tr>

    </table>
